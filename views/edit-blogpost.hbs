{{#if blogpost}}

  {{#if errorMessages.length}}
    <div class="error-messages-container">
      <div>Couldn't edit blogpost because:</div>
      <ul>
        {{#each errorMessages}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
    </div>
  {{/if}}

  <form action="/edit-blogpost/{{blogpost.blogpostid}}" method="post">
    <div class="blogpost-form-main-container">
      <div class="blogpost-form-container">
        <input type="submit" class="btn btn-success btn-done" value="DONE" />
        <div class="input-container">
          <p class="input-title">Title</p>
          <input class="input-box" name="title" type="text" placeholder="Title" value="{{blogpost.title}}" />
        </div>
        <div class="input-container">
          <p class="input-title">Category</p>
          <select name="category">
            <option value="Tips">Tips</option>
            <option value="Web Development">Web Development</option>
            <option value="Portfoliou">Portfoliou</option>
            <option value="Suggestions">Suggestions</option>
            <option value="Other">Other</option>
          </select>
        </div>
        <div class="input-container">
          <p class="input-title">Content</p>
          <textarea
            name="content"
            id="content"
            cols="20"
            rows="10"
            placeholder="Insert here..."
          >{{blogpost.content}}</textarea>
        </div>
      </div>
    </div>
  </form>

{{else}}
  <div class="text-container">
    <h1>404 page could not be found</h1>
    <p>The page you are looking for is beyond your reach. Either it does not exist anymore, or perhaps it never
      existed...</p>
    <div class="paragraph-break"></div>
    <h2>Let us guide you to a page that does exist!</h2>
    <div class="paragraph-break"></div>
    <div>
      <a href="/">
        <button class="btn-filled">HOME</button>
      </a>
      <a href="/contact-page">
        <button class="btn-outlined">CONTACT</button>
      </a>
    </div>
  </div>
{{/if}}