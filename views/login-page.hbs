<div class="main-login-container">
  <div class="login-container">
    <h2>Login</h2>

    {{#if failedToLogin}}
      <div class="error-messages-container">Wrong password or username.</div>
    {{/if}}

    <form action="/login-page" method="post">
      <div class="form-group">
        <label class="form-label" for="input-name">Name</label>
        <input class="form-input login" type="text" name="username" placeholder="Name" />
      </div>
      <div class="form-group">
        <label class="form-label" for="input-password">Password</label>
        <input class="form-input login" type="password" name="password" placeholder="Password" />
      </div>
      <input class="btn-outlined" type="submit" value="LOGIN"></input>
    </form>
  </div>
</div>